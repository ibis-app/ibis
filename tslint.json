{
    "$schema": "https://raw.githubusercontent.com/SchemaStore/schemastore/master/src/schemas/json/tslint.json",
    "extends": [
        "tslint-eslint-rules"
    ],
    "linterOptions": {
        "exclude": [
            "dist/*",
            "node_modules/*"
        ]
    },
    "rules": {
        "semi": false,
        "no-constant-condition": true,
        "sort-imports": true,
        "eofline": true,
        "quotemark": [
            true,
            "avoid-escape"
        ]
    }
}