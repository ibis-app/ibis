  "dependencies": {
    "pouchdb": "^7.1.1"
  },
  "devDependencies": {
    "@pika/web": "^0.4.3",
    "@types/pouchdb": "^6.4.0",
    "http-server": "^0.11.1",
    "nodemon": "^1.19.1"
  },
  "paths": {
    "scripts": [
      "dist/**/*.js"
    ],
    "vendor": [
